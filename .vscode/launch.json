{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Bot (Star Mode)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "env": {
                "MODE": "star"
            },
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Bot (Check Mode)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "env": {
                "MODE": "check"
            },
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Setup Bot",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/setup.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Validate Configuration",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/validate.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
